<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
  <id>event-library-plugin</id>
  <name>Event Library Helper</name>
  <vendor email="personal@nikanradan.com">Nikan Radan</vendor>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.java</depends>
  <depends>org.jetbrains.kotlin</depends>
  <depends>org.intellij.scala</depends>

  <resource-bundle>messages.MyBundle</resource-bundle>

  <extensions defaultExtensionNs="com.intellij">
    <implicitUsageProvider implementation="com.smushytaco.event_library_plugin.usage.EventLibraryImplicitUsageProvider"/>
    <lang.inspectionSuppressor
      language="kotlin"
      implementationClass="com.smushytaco.event_library_plugin.suppressors.EventLibraryUnusedSuppressor"
      order="first"/>
    <localInspection
      language="UAST"
      shortName="EventLibraryReturnType"
      displayName="Event Library handler must return void/Unit"
      groupName="Event Library"
      enabledByDefault="true"
      level="ERROR"
      implementationClass="com.smushytaco.event_library_plugin.inspections.EventLibraryReturnTypeInspection"/>
    <localInspection
      language="UAST"
      shortName="EventLibraryEventHandlerSignature"
      displayName="Event Library @EventHandler signature rules"
      groupName="Event Library"
      enabledByDefault="true"
      level="ERROR"
      implementationClass="com.smushytaco.event_library_plugin.inspections.EventLibraryEventHandlerSignatureInspection"/>
    <localInspection
      language="UAST"
      shortName="EventLibraryExceptionHandlerSignature"
      displayName="Event Library @ExceptionHandler signature rules"
      groupName="Event Library"
      enabledByDefault="true"
      level="ERROR"
      implementationClass="com.smushytaco.event_library_plugin.inspections.EventLibraryExceptionHandlerSignatureInspection"/>

  </extensions>
  <extensions defaultExtensionNs="org.jetbrains.kotlin">
    <supportsKotlinPluginMode supportsK2="true"/>
  </extensions>
</idea-plugin>
